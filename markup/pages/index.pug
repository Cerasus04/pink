extends _template.pug
include ../components/title/title.pug
include ../components/title-main/title-main.pug
include ../components/button-link/button-link.pug
include ../components/icon-list/icon-list.pug
include ../components/text-block/text-block.pug
include ../components/review-slider/review-slider.pug
include ../components/paginator/paginator.pug
include ../components/controls/controls.pug
include ../components/table/table.pug
include ../components/contacts/contacts.pug
include ../components/map/map.pug

append section
    .promo.promo--index
        .container
            .container__row
                .container__col-6.container__col-md-3.container__col-xl-2
                    +title-main({titleText: 'Взгляните на жизнь иначе!'})
                    +button-link({buttonDescr : 'Скачать приложение'})
                    +icon-list([
                        {mod : '1'},
                        {mod: '2'},
                        {mod: '3'}
                    ])
    .post
        .container
            .container__row
                .container__col-6
                    +title({titleText: 'Устали от серости мегаполиса?'})
                    +title({titleText: 'Нам есть, что вам <br> предложить!'})
            .container__row
                .post__all-screen.container__col-6.container__offset-md-3.container__offset-xl-none
                    +text-block([
                        {
                            wrap: '1',
                            title : 'Поднимает настроение',
                            text: 'Приложение позволит вам победить осеннюю хандру и депрессию буквально в несколько кликов!'
                        },{
                            wrap: '2',
                            title : 'Меняет мир вокруг',
                            text: 'Сделайте снимок и украсьте его смайликом или текстовой подписью, чтобы усилить эффект'
                        }, {
                            wrap: '3',
                            title : 'Заводит новых друзей',
                            text: 'Ставьте лайки, комментируйте, делитесь фотографиями с друзьями и заводите новых'
                        }
                    ])
            .container__row
                .post__tb-screen.container__col-md-6.container__offset-md-3
                    h2.post__title Эффект на 24 часа!
                    p.post__text Британские ученые провели исследования и доказали, что положительный эффект от использования приложения длится целые сутки!
                    a.post__link Узнать больше об исследовании
    .reviews
        .container
            .container__row
                .reviews__wrap.container__col-6
                    +review-slider([
                        {
                            selected: true,
                            author: 'Николай Петров',
                            tbText: '25 лет, водитель трамвая',
                            text: '«Это приложение перевернуло мой мир и позволило по-новому взглянуть на привычные серые вещи! А еще я познакомился со своей будущей женой в комментариях к выложенной фотографии!»'
                        },{
